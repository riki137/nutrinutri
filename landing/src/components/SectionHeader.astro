---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="header-center">
    <h2 class="section-title">{title}</h2>
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
</div>

<style>
    .header-center {
        text-align: center;
        margin-bottom: 3rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--color-text);
    }

    .section-subtitle {
        font-size: 1.125rem;
        color: var(--color-text-muted);
    }
</style>
